#include <iostream>
using namespace std;

long factorial(int n) {
    long fact = 1;
    for (int i = 1; i <= n; i++) {
        fact *= i;
    }
    return fact;
}

double potencia(double x, int n) {
    double result = 1;
    for (int i = 0; i < n; i++) {
        result *= x;
    }
    return result;
}

double sumaSerie(double x, int n) {
    double suma = 0;
    for (int i = 1; i <= n; i++) {
        suma += potencia(x, i) / factorial(i);
    }
    return suma;
}

int main() {
    double x;
    int n;

    cout << "Ingrese el valor de X: ";
    cin >> x;
    cout << "Ingrese el valor de N: ";
    cin >> n;

    double resultado = sumaSerie(x, n);
    cout << "La suma de la serie es: " << resultado << endl;

    return 0;
}
