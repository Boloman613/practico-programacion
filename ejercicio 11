#include <iostream>
#include <string>
using namespace std;

string unidades[] = {"", "uno", "dos", "tres", "cuatro", "cinco", "seis", "siete", "ocho", "nueve"};
string decenas[] = {"", "diez", "veinte", "treinta", "cuarenta", "cincuenta", "sesenta", "setenta", "ochenta", "noventa"};
string especiales[] = {"diez", "once", "doce", "trece", "catorce", "quince", "dieciseis", "diecisiete", "dieciocho", "diecinueve"};

string convertirGrupo(int numero) {
    if (numero == 0) return "cero";

    string resultado = "";
    int centenas = numero / 100;
    int resto = numero % 100;
    int decena = resto / 10;
    int unidad = resto % 10;

    if (centenas > 0) {
        if (centenas == 1) resultado += "cien";
        else resultado += unidades[centenas] + "cientos";
    }

    if (resto > 0) {
        if (resultado != "") resultado += " ";

        if (resto >= 10 && resto <= 19) {
            resultado += especiales[resto - 10];
        } else {
            if (decena > 0) {
                resultado += decenas[decena];
                if (unidad > 0) resultado += " y ";
            }
            if (unidad > 0) {
                resultado += unidades[unidad];
            }
        }
    }

    return resultado;
}

string numeroALiteral(double numero) {
    int parteEntera = (int)numero;
    int decimales = (int)((numero - parteEntera) * 100 + 0.5);

    string resultado = "";

    if (parteEntera == 0) {
        resultado = "cero";
    } else {
        int miles = parteEntera / 1000;
        int resto = parteEntera % 1000;

        if (miles > 0) {
            if (miles == 1) resultado += "mil ";
            else resultado += convertirGrupo(miles) + " mil ";
        }

        if (resto > 0) {
            resultado += convertirGrupo(resto);
        }
    }

    resultado += " " + to_string(decimales) + "/100 bolivianos";
    return resultado;
}

int main() {
    double numero;

    cout << "CONVERSION NUMERO A LITERAL" << endl;
    cout << "Ingrese un numero (max 4 cifras, 2 decimales): ";
    cin >> numero;

    string literal = numeroALiteral(numero);
    cout << "Equivalente literal: " << literal << endl;

    return 0;
}
