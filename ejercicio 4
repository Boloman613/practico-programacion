#include <iostream>
using namespace std;

long factorial(int n) {
    long fact = 1;
    for (int i = 1; i <= n; i++) {
        fact *= i;
    }
    return fact;
}

double potencia(double x, int n) {
    double result = 1;
    for (int i = 0; i < n; i++) {
        result *= x;
    }
    return result;
}

double sumaSerieAlternada(double x, int n) {
    double suma = 0;
    int signo = 1;

    for (int i = 1; i <= n; i += 2) {
        suma += signo * (potencia(x, i) / factorial(i));
        signo *= -1;
    }
    return suma;
}

int main() {
    double x;
    int n;

    cout << "Ingrese el valor de X: ";
    cin >> x;
    cout << "Ingrese el numero de terminos impares N: ";
    cin >> n;

    if (n % 2 == 0) {
        n--;
    }

    double resultado = sumaSerieAlternada(x, n);
    cout << "La suma de la serie alternada es: " << resultado << endl;

    return 0;
}
