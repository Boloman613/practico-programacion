#include <iostream>
using namespace std;

double factorial(int n) {

    if (n < 0) {
        cout << "Error: Factorial no definido para negativos." << endl;
        return 0.0;
    }

    if (n == 0) {
        return 1.0;
    }

    double resultado = 1.0;

    for (int i = 1; i <= n; ++i) {
        resultado *= i;
    }

    return resultado;
}

int main() {
    int num;

    cout << "--- Problema 2: Factorial ---" << endl;
    cout << "Introduce un numero entero (n): ";
    cin >> num;

    double resultado_factorial = factorial(num);

    cout << "Resultado (" << num << "!): " << resultado_factorial << endl;

    return 0;
}
